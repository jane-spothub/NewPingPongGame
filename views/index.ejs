<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ping Pong Game</title>
    <link rel="stylesheet" href="./css/style.css"/>
</head>
<body>
<div class="game-container">
    <canvas id="gameCanvas"></canvas>
    <div class="score-display">
        <div id="playerScore">Player: 0</div>
        <div id="botScore">Bot: 0</div>
    </div>
    <div class="touch-controls">
        <div class="touch-btn" id="leftBtn">◄</div>
        <div class="touch-btn" id="rightBtn">►</div>
    </div>

    <!-- Main Menu Overlay -->
    <div class="overlay" id="menuOverlay">
        <h1 class="title">PING PONG</h1>
        <button class="btn" id="playBtn">PLAY NOW</button>
        <div class="instructions">
            Use LEFT and RIGHT arrow keys or touch controls to move your paddle
        </div>
    </div>

    <!-- Difficulty Selection Overlay -->
    <div class="overlay hidden" id="levelSelectOverlay">
        <h1 class="title">SELECT DIFFICULTY</h1>
        <button class="btn btn-level easy" id="easyBtn">EASY</button>
        <button class="btn btn-level medium" id="mediumBtn">MEDIUM</button>
        <button class="btn btn-level hard" id="hardBtn">HARD</button>
        <div class="level-info" id="levelInfo">
            Easy: Slow bot speed, great for beginners
        </div>
        <button class="btn" id="backBtn">BACK</button>
    </div>

    <!-- Game Over Overlay -->
    <div class="overlay hidden" id="gameOverOverlay">
        <div class="game-over">
            <h2 class="winner-text" id="winnerText">YOU WIN!</h2>
            <button class="btn" id="restartBtn">PLAY AGAIN</button>
            <button class="btn" id="menuBtn">BACK TO MENU</button>
        </div>
    </div>
</div>

<script src="./js/game.js">

</script>
</body>
</html>